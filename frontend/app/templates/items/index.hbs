<div class="row text-center heading-items">
  <h2>Total Items: {{model.length}} </h2>
</div>

<div class="row">
  <div class="text-center">
    {{#link-to 'items.new' class="btn btn-primary btn-lg button-show"}}Add New Item{{/link-to}}
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Item Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |item|}}
          <tr>
            <td class="item-name">{{link-to item.name 'items.show' item}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
