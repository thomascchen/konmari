<div class="row text-center">
<h1>Items</h1>

<h2>Total items: {{model.length}} </h2>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Item Name</th>
        </tr>
      </thead>
      <tbody>
    {{#each model as |item|}}
      <tr>
      <td><h3>{{link-to item.name 'items.show' item}}</h3></td>
      </tr>
    {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="text-center">
{{#link-to 'items.new' class="btn btn-primary"}}Add New Item{{/link-to}}
</div>
</div>
